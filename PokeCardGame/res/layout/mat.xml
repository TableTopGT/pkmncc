<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/battlebackground" >

    <LinearLayout
        android:id="@+id/player_one_bench"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="23dp"
        android:orientation="vertical" android:animateLayoutChanges="true" android:hapticFeedbackEnabled="true" android:rotation="180">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_two_bench"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>